# YouTube Playlist Transcript & Gemini Refinement Extractor Configuration
# Copy this file to .env and fill in your values

# Required: Your Gemini API Key
API_KEY=your_gemini_api_key_here

# Optional: Output language for Gemini processing
LANGUAGE=English

# Proxy credentials - COMMENTED OUT - Not available in this version of youtube_transcript_api
# PROXY_USERNAME=your_proxy_username
# PROXY_PASSWORD=your_proxy_password

# Optional: Default file paths for output
TRANSCRIPT_OUTPUT_FILE=transcript_output.txt
GEMINI_OUTPUT_FILE=gemini_output.txt

# Optional: Refinement style (must match one of the available options)
# Options: "Balanced and Detailed", "Summary", "Educational", "Narrative Rewriting", "Q&A Generation"
REFINEMENT_STYLE=Balanced and Detailed

# Optional: Chunk size for Gemini processing (2000-50000)
CHUNK_SIZE=3000

# Optional: Gemini model to use
# Options: "gemini-2.5-flash", "gemini-2.0-flash", "gemini-2.0-flash-thinking-exp-01-21", 
#          "gemini-2.5-flash-lite-preview-06-17", "gemini-2.5-pro-preview-03-25", 
#          "gemini-2.0-flash-lite", "gemini-1.5-flash", "gemini-1.5-pro"
GEMINI_MODEL=gemini-2.5-flash
